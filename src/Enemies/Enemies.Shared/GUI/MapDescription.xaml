<?xml version="1.0" encoding="utf-8" ?>
<controls:ClickableGrid xmlns="clr-namespace:Xamarin.Forms;assembly=Xamarin.Forms.Core"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      xmlns:controls="clr-namespace:Enemies.Controls;assembly=Enemies.MonoGame"
      x:Class="Enemies.GUI.MapDescription">
    <controls:ClickableGrid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
    </controls:ClickableGrid.ColumnDefinitions>
    <Label Text="{Binding}" VerticalOptions="Center" HorizontalOptions="FillAndExpand" Grid.Column="1" />
</controls:ClickableGrid>